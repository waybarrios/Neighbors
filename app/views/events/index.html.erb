
<h1 class="small-12 medium-12 large-12">Listing events</h1>
 
 

<% if user_signed_in? %>
    <% if current_user.type_user == 'user'%>       

        <% @events.each do |event| %>
            <% if event.user_id == current_user.id%>
              <ul class="vcard small-12 small-centered medium-9 medium-centered large-9 large-centered columns" columns large-3 medium-3 small-12> 
                <li class="fn">
                  <h1 class=""><%= event.title %></h1>
                </li> 
                <li class="street-address">
                  <%= event.description %>
                </li> 
                <li class="locality">                  
                    <%= event.time_event %>                  
                </li>       
                <li class="street-address">
                  <%= event.date_event %>
                </li> 
                <li class="street-address">
                  <%= event.place %>
                </li> 
                <li class="email">
                  <span><%= link_to 'Show', event, class: "" %></span> <span><%= link_to 'Edit', edit_event_path(event), class: "" %></span> <span><%= link_to 'Destroy', event, class: "",method: :delete, data: { confirm: 'Are you sure?' } %></span> 
                </li> 
              </ul>
              
            <% end %>  
        <% end %>


    <% else %>
        <% @events.each do |event| %>
              <ul class="vcard small-12 small-centered medium-9 medium-centered large-9 large-centered columns" columns large-3 medium-3 small-12> 
                <li class="fn">
                  <h1 class=""><%= event.title %></h1>
                </li> 
                <li class="street-address">
                  <%= event.description %>
                </li> 
                <li class="locality">                  
                    <%= event.time_event %>                  
                </li>       
                <li class="street-address">
                  <%= event.date_event %>
                </li> 
                <li class="street-address">
                  <%= event.place %>
                </li> 
                <li class="email">
                  <span><%= link_to 'Show', event, class: "" %></span> <span><%= link_to 'Edit', edit_event_path(event), class: "" %></span> <span><%= link_to 'Destroy', event, class: "",method: :delete, data: { confirm: 'Are you sure?' } %></span> 
                </li> 
              </ul>
             
        <% end %>
        <%= link_to 'New event', new_event_path,  class: "button radius medium-5 small-12 medium-push-3 columns success" %>
    <% end %>

<% end %>
</br>



